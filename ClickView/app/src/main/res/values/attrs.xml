<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ClockView">
        <attr name="discRadius" format="dimension" />//表盘半径
        <attr name="discColor" format="color" />//表盘颜色
        <attr name="discPadding" format="dimension" />//表盘内部间距
        <attr name="pointRadius" format="dimension" />//圆心小点半径
        <attr name="pointColor" format="color" />//小圆点颜色
        <attr name="edgeWidth" format="dimension" />//表盘边缘宽度
        <attr name="discLongWidth" format="dimension" />//长刻度的宽
        <attr name="discLongLength" format="dimension" />//长刻度的长
        <attr name="discLongColor" format="color" />//长刻度的颜色
        <attr name="discShortWidth" format="dimension" />//短刻度的宽
        <attr name="discShortLength" format="dimension" />//短刻度的长
        <attr name="discShortColor" format="color" />//短刻度的颜色
        <attr name="textFont" format="integer" />//数字大小
        <attr name="textColor" format="color" />//数字颜色
        <attr name="hourWidth" format="dimension" />//时针宽
        <attr name="hourLength" format="dimension" />//时针长
        <attr name="hourColor" format="color" />//时针颜色
        <attr name="minuteWidth" format="dimension" />//分针宽
        <attr name="minuteLength" format="dimension" />//分针长
        <attr name="minuteColor" format="color" />//分针颜色
        <attr name="secondWidth" format="dimension" />秒针宽
        <attr name="secondLength" format="dimension" />//秒针长
        <attr name="secondColor" format="color" />//秒针颜色

    </declare-styleable>
</resources>
